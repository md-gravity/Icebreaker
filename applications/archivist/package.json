{
  "name": "@applications/archivist",
  "version": "0.0.1",
  "main": "./build/server.js",
  "types": "./build/server.d.ts",
  "files": ["build/**/*"],
  "scripts": {
    "postinstall": "pnpm build",
    "start": "tsx src",
    "dev": "tsx watch --clear-screen=false src",
