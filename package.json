{
  "name": "@gravity/icebreaker",
  "version": "0.0.1",
  "engines": {
    "node": ">=19",
    "npm": ">=9"
  },
  "workspaces": [
    "packages/*",
    "applications/*"
  ],
  "scripts": {
    "build": "turbo build",
    "typecheck": "turbo typecheck",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "===dev===": "===dev===",
    "dev:archivist": "turbo dev --filter=@applications/archivist",
    "dev:passport": "turbo dev --filter=@applications/passport",
    "dev:telegraph": "turbo dev --filter=@applications/telegraph",
    "dev:web": "turbo dev --filter=@applications/web",
    "===debug===": "===debug===",
    "debug:archivist": "turbo debug --filter=@applications/archivist",
    "debug:passport": "turbo debug --filter=@applications/passport",
    "debug:telegraph": "turbo debug --filter=@applications/telegraph",
    "debug:web": "turbo debug --filter=@applications/web",
    "===build===": "===build===",
    "build:archivist": "turbo build --filter=@applications/archivist",
    "build:passport": "turbo build --filter=@applications/passport",
    "build:telegraph": "turbo build --filter=@applications/telegraph",
    "build:web": "turbo build --filter=@applications/web",
    "===prisma===": "===prisma:deploy===",
    "prisma:deploy:archivist": "turbo prisma:deploy --filter=@applications/archivist",
    "prisma:deploy:passport": "turbo prisma:deploy --filter=@applications/passport",
    "prisma:deploy:telegraph": "turbo prisma:deploy --filter=@applications/telegraph",
    "prisma:generate:archivist": "turbo prisma:generate --filter=@applications/archivist",
    "prisma:generate:passport": "turbo prisma:generate --filter=@applications/passport",
    "prisma:generate:telegraph": "turbo prisma:generate --filter=@applications/telegraph",
    "===typecheck===": "===typecheck===",
    "typecheck:archivist": "turbo typecheck --filter=@applications/archivist",
    "typecheck:passport": "turbo typecheck --filter=@applications/passport",
    "typecheck:telegraph": "turbo typecheck --filter=@applications/telegraph",
    "typecheck:web": "turbo typecheck --filter=@applications/web",
    "===lint===": "===lint===",
    "lint:archivist": "turbo lint --filter=@applications/archivist",
    "lint:passport": "turbo lint --filter=@applications/passport",
    "lint:telegraph": "turbo lint --filter=@applications/telegraph",
    "lint:web": "turbo lint --filter=@applications/web",
    "lint:fix:archivist": "turbo lint:fix --filter=@applications/archivist",
    "lint:fix:passport": "turbo lint:fix --filter=@applications/passport",
    "lint:fix:telegraph": "turbo lint:fix --filter=@applications/telegraph",
    "lint:fix:web": "turbo lint:fix --filter=@applications/web"
  },
  "devDependencies": {
    "eslint": "^8.30.0",
    "tsx": "^3.12.6",
    "turbo": "^1.6.3",
    "typescript": "^5.0.3"
  }
}
